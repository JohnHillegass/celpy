# Makefile for python interface for package cel.
# File is generated by gopy. Do not edit.
# gopy pkg github.com/google/cel-go/cel

GOCMD=go
GOBUILD=$(GOCMD) build
GOIMPORTS=goimports
PYTHON=/usr/bin/python
LIBEXT=.so

# get the CC and flags used to build python:
GCC = $(shell $(GOCMD) env CC)
CFLAGS = -I/System/Library/Frameworks/Python.framework/Versions/2.7/include/python2.7
LDFLAGS = -L/System/Library/Frameworks/Python.framework/Versions/2.7/lib -lpython2.7 -ldl  -framework CoreFoundation 

all: gen build

gen:
	gopy pkg github.com/google/cel-go/cel

build:
	# build target builds the generated files -- this is what gopy build does..
	# this will otherwise be built during go build and may be out of date
	- rm cel.c
	# goimports is needed to ensure that the imports list is valid
	$(GOIMPORTS) -w cel.go
	# generate cel_go$(LIBEXT) from cel.go -- the cgo wrappers to go functions
	$(GOBUILD) -buildmode=c-shared -o cel_go$(LIBEXT) cel.go
	# use pybindgen to build the cel.c file which are the CPython wrappers to cgo wrappers..
	# note: pip install pybindgen to get pybindgen if this fails
	$(PYTHON) build.py
	# patch storage leaks in pybindgen output
	go run patch-leaks.go cel.c
	# build the _cel$(LIBEXT) library that contains the cgo and CPython wrappers
	# generated cel.py python wrapper imports this c-code package
	$(GCC) cel.c -dynamiclib cel_go$(LIBEXT) -o _cel$(LIBEXT) $(CFLAGS) $(LDFLAGS) -fPIC --shared -w
	


