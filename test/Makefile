# Makefile for python interface for package test.
# File is generated by gopy. Do not edit.
# gopy build -output=test github.com/google/cel-go/test

GOCMD=go
GOBUILD=$(GOCMD) build
GOIMPORTS=goimports
PYTHON=/Users/johnhillegass/Library/Caches/pypoetry/virtualenvs/py-cel-JiNhAeSg-py3.7/bin/python
LIBEXT=.so

# get the CC and flags used to build python:
GCC = $(shell $(GOCMD) env CC)
CFLAGS = -I/usr/local/Cellar/python/3.7.7/Frameworks/Python.framework/Versions/3.7/include/python3.7m
LDFLAGS = -L/usr/local/opt/python/Frameworks/Python.framework/Versions/3.7/lib -lpython3.7m -ldl  -framework CoreFoundation 

all: gen build

gen:
	gopy gen github.com/google/cel-go/test

build:
	# build target builds the generated files -- this is what gopy build does..
	# this will otherwise be built during go build and may be out of date
	- rm test.c
	# goimports is needed to ensure that the imports list is valid
	$(GOIMPORTS) -w test.go
	# generate test_go$(LIBEXT) from test.go -- the cgo wrappers to go functions
	$(GOBUILD) -buildmode=c-shared -o test_go$(LIBEXT) test.go
	# use pybindgen to build the test.c file which are the CPython wrappers to cgo wrappers..
	# note: pip install pybindgen to get pybindgen if this fails
	$(PYTHON) build.py
	# patch storage leaks in pybindgen output
	go run patch-leaks.go test.c
	# build the _test$(LIBEXT) library that contains the cgo and CPython wrappers
	# generated test.py python wrapper imports this c-code package
	$(GCC) test.c -dynamiclib test_go$(LIBEXT) -o _test$(LIBEXT) $(CFLAGS) $(LDFLAGS) -fPIC --shared -w
	


